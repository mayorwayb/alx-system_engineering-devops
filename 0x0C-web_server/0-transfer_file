#!/bin/bash

# Check if less than 4 parameters are passed
if [ "$#" -lt 4 ]; then
  echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
  exit 1
fi

# Assign parameters to variables
FILE_PATH=$1
SERVER_IP=$2
USERNAME=$3
SSH_KEY_PATH=$4

# Check if the file to transfer exists
if [ ! -f "$FILE_PATH" ]; then
  echo "Error: File '$FILE_PATH' does not exist."
  exit 1
fi

# Check if the SSH private key file exists
if [ ! -f "$SSH_KEY_PATH" ]; then
  echo "Error: SSH key '$SSH_KEY_PATH' does not exist."
  exit 1
fi

# Use scp to transfer the file to the user's home directory on the server
scp -i "$SSH_KEY_PATH" -o StrictHostKeyChecking=no "$FILE_PATH" "$USERNAME@$SERVER_IP:~/"

# Check if the scp command was successful
if [ $? -eq 0 ]; then
  echo "File transfer completed successfully."
else
  echo "File transfer failed."
fi

